{
  "name": "@entrip/api-legacy",
  "version": "1.0.0",
  "description": "Entrip Backend API Service",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "pnpm exec ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "echo 'apps/api tests skipped for now'",
    "test:watch": "echo 'apps/api tests skipped for now'",
    "test:coverage": "echo 'apps/api tests skipped for now'",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "openapi:build": "ts-node --transpile-only generate-openapi.ts",
    "openapi:lint": "npx @redocly/cli lint ../../packages/shared/openapi/openapi.json",
    "openapi:validate": "npm run openapi:build && npm run openapi:lint"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "api",
    "express",
    "swagger"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@entrip/shared": "workspace:*",
    "@types/xml2js": "^0.4.14",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "zod": "^3.25.67",
    "@prisma/client": "6.11.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/xlsx": "^0.0.36",
    "jest": "^29.7.0",
    "lighthouse": "^12.8.0",
    "prisma": "^6.11.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}