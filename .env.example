# 환경 변수 예시
# 실제 값은 .env.local에 저장하세요

# Database Configuration
POSTGRES_USER=entrip
POSTGRES_PASSWORD=entrip123
POSTGRES_DB=entrip_db
DATABASE_URL=postgresql://entrip:entrip123@localhost:5432/entrip_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Configuration
PORT=4000
NODE_ENV=development
FRONT_URL=http://localhost:3000

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_TELEMETRY_DISABLED=1

# Development
NEXT_PUBLIC_API_MOCKING=disabled # Set to 'enabled' to use MSW mocks

# API Keys
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXIM_API_KEY=your_exim_api_key
SKYSCANNER_API_KEY=your_skyscanner_api_key
ODCLOUD_API_KEY=your_odcloud_api_key

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# External Services
BANK_API_URL=your_bank_api_url
BANK_API_KEY=your_bank_api_key
OCR_API_KEY=your_ocr_api_key
SMS_API_KEY=your_sms_api_key
FAX_API_KEY=your_fax_api_key

# Monitoring Configuration
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin

# Docker Environment
COMPOSE_PROJECT_NAME=entrip
