# Staging Environment Configuration
NODE_ENV=staging

# Database Configuration
POSTGRES_USER=entrip_staging
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_STAGING
POSTGRES_DB=entrip_staging
DATABASE_URL=postgresql://entrip_staging:${POSTGRES_PASSWORD}@staging-db:5432/entrip_staging

# API Configuration
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_STAGING
API_PORT=4000
API_V2_PORT=4002
INTERNAL_API_URL=http://api:4000
INTERNAL_API_V2_URL=http://api-v2:4002

# Redis Configuration
REDIS_URL=redis://redis:6379

# External APIs
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=${EXCHANGE_RATE_API_KEY}
NEXT_PUBLIC_CRAWLER_API_URL=http://crawler:8001

# Security
DEBUG=false
LOG_LEVEL=info

# Monitoring
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
GRAFANA_SECRET_KEY=${GRAFANA_SECRET_KEY}

# Performance
MAX_CONNECTIONS=20
POOL_SIZE=10