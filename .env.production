# Production Environment Configuration
NODE_ENV=production

# Database Configuration (MUST BE SECURE)
POSTGRES_USER=entrip_prod
POSTGRES_PASSWORD=CHANGE_ME_VERY_STRONG_PASSWORD_PRODUCTION
POSTGRES_DB=entrip_prod
DATABASE_URL=postgresql://entrip_prod:${POSTGRES_PASSWORD}@postgres:5432/entrip_prod

# API Configuration (MUST BE SECURE)
JWT_SECRET=CHANGE_ME_VERY_STRONG_JWT_SECRET_PRODUCTION_MINIMUM_32_CHARS
API_PORT=4000
API_V2_PORT=4002
INTERNAL_API_URL=http://api:4000
INTERNAL_API_V2_URL=http://api-v2:4002

# Redis Configuration
REDIS_URL=redis://redis:6379

# External APIs (SET PRODUCTION KEYS)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=${EXCHANGE_RATE_API_KEY}
NEXT_PUBLIC_CRAWLER_API_URL=http://crawler:8001

# Security Settings
DEBUG=false
LOG_LEVEL=warn
TRUST_PROXY=true

# Monitoring (SET SECURE PASSWORDS)
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
GRAFANA_SECRET_KEY=${GRAFANA_SECRET_KEY}

# Performance Settings
MAX_CONNECTIONS=50
POOL_SIZE=20
CACHE_TTL=3600

# SSL/TLS (if using custom certs)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30