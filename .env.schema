# Environment Variables Schema
# This file defines all required environment variables

# Next.js Public Variables (exposed to client)
NEXT_PUBLIC_API_URL=string,required
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=string,required
NEXT_PUBLIC_EXCHANGE_RATE_API_KEY=string,required
NEXT_PUBLIC_API_MOCKING=string,optional,default=disabled

# Server-side Variables
DATABASE_URL=string,required
NEXTAUTH_URL=string,required
NEXTAUTH_SECRET=string,required,min=32
JWT_SECRET=string,required,min=32

# External APIs
SKYSCANNER_API_KEY=string,optional
OPENAI_API_KEY=string,optional
SLACK_WEBHOOK_URL=string,optional

# Email Service
EMAIL_SERVER_HOST=string,optional
EMAIL_SERVER_PORT=number,optional,default=587
EMAIL_SERVER_USER=string,optional
EMAIL_SERVER_PASSWORD=string,optional
EMAIL_FROM=string,optional,default=noreply@entrip.dev

# Redis Cache
REDIS_URL=string,optional

# Monitoring
SENTRY_DSN=string,optional
VERCEL_URL=string,optional

# Feature Flags
ENABLE_ANALYTICS=boolean,optional,default=false
ENABLE_CHAT=boolean,optional,default=false
MAINTENANCE_MODE=boolean,optional,default=false